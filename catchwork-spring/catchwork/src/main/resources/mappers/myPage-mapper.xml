<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mypage.model.mapper.CorpMyPageMapper">

    <!-- 기업 마이페이지 정보 조회 -->
    <select id="selectCorpMyPage" resultType="com.example.demo.mypage.model.dto.CorpMyPage">
        SELECT 
            COMPANY_NAME,
            COMPANY_ID,
            EMAIL,
            PHONE_NUMBER,
            MANAGER_NAME,
            DEPARTMENT_NAME
        FROM COMPANY_MEMBER
        WHERE COMPANY_ID = #{companyId}
    </select>

</mapper>